<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="Audio Track"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:icon="@drawable/ic_audio"
                app:iconGravity="top"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubtitle"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="Subtitles"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:icon="@drawable/ic_subtitles"
                app:iconGravity="top"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="Booster"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:icon="@drawable/ic_speaker"
                app:iconGravity="top"
                app:iconTint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSpeed"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="Speed"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:icon="@drawable/ic_speed"
                app:iconGravity="top"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="Sleep Timer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:icon="@drawable/ic_timer"
                app:iconGravity="top"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="PIP Mode"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:icon="@drawable/ic_picture"
                app:iconGravity="top"
                app:iconTint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</layout>